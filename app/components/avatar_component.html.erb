<%= tag.picture "data-file-upload-target": "picture" do %>
  <%= tag.source media: "(-webkit-min-device-pixel-ratio: 2), (min-resolution: 2dppx)", srcset: avatar_image_url(is_2x: true), "data-file-upload-target": "source" %>
  <%= image_tag avatar_image_url, alt: "#{name} avatar", data:, class: classes %>
<% end %>
