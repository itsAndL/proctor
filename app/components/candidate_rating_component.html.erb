<div data-controller="candidate-rating" 
     data-candidate-rating-url-value="<%= rate_assessment_participation_path(@assessment_participation) %>"
     data-candidate-rating-assessment-participation-id-value="<%= @assessment_participation.id %>"
     data-candidate-rating-initial-rating-value="<%= @assessment_participation.rating || 0 %>"
     class="py-6 px-4 sm:p-8">
  <div class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-2">
    <div>
      <div class="font-bold text-gray-800"><%= t('.your_rating') %></div>
      <div class="mt-1.5 text-gray-600 text-sm font-medium"><%= t('.rating_description') %></div>
      <div class="mt-6 flex items-center">
        <% 5.times do |i| %>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
               class="h-5 w-5 flex-shrink-0 cursor-pointer <%= i < (@assessment_participation.rating || 0) ? 'text-yellow-400' : 'text-gray-200' %>"
               data-action="click->candidate-rating#setRating"
               data-candidate-rating-target="star"
               data-rating="<%= i + 1 %>">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
        <% end %>
      </div>
    </div>

    <textarea 
      data-candidate-rating-target="notes"
      data-action="input->candidate-rating#autoSave"
      placeholder="<%= t('.notes_placeholder') %>" 
      rows="3" 
      class="primary-field"
    ><%= @assessment_participation.notes %></textarea>
  </div>
</div>