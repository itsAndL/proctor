<div <%= monitoring_attributes.map { |k, v| "#{k}=\"#{v}\"" }.join(' ').html_safe %>>
  <%= render ParticipationHeaderComponent.new(company: @assessment_participation.assessment.business.company) %>
  <main data-controller="countdown" class="bg-zinc-50 h-full pt-10">
    <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:px-8 pb-16">
      <div class="border border-gray-200 bg-white rounded-xl px-6 py-10 md:px-12 md:py-16">
        <div>
          <p class="text-gray-800 space-y-3 font-medium"><%= t('.next_test') %></p>
          <h1 class="mt-3 font-extrabold leading-7 text-gray-800 text-xl"><%= @title %></h1>
          <% if @intro %>
            <p class="mt-3.5 w-fit whitespace-nowrap rounded-full bg-blue-100 px-2 text-xs font-semibold leading-6 text-gray-900"><%= t('.practice_questions') %></p>
          <% end %>
          <p class="mt-4 text-gray-800 space-y-3 font-medium">
            <% if @intro %>
              <%= t('.intro_message') %>
            <% else %>
              <%= t('.actual_test_message') %>
            <% end %>
          </p>
          <div class="mt-5 border-t border-gray-300 pt-5 pr-2">
            <p class="text-gray-800 space-y-3 font-medium"><%= @intro ? t('.practice_questions') : Question.model_name.human %> <%= t('.will_start_in') %> <strong data-countdown-target="timer"><%= countdown_time %></strong> <%= t('.seconds') %></p>
            <p class="mt-4 text-gray-800 space-y-3 font-medium"><%= t('.stay_on_screen_message').html_safe %></p>
          </div>
          <%= link_to @next_url, data: { countdown_target: "nextPage" }, class: "hidden" do %>
            <%= t('.next_page') %>
          <% end %>
        </div>
      </div>
    </div>
  </main>
</div>