<main class="bg-zinc-50 h-full">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="pt-8 flex items-center justify-between gap-x-4">
      <h1 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">Tests</h1>
  
      <%= link_to new_assessment_path, class: "primary-button" do %>
        <%= svg_tag "plus_circle" %>
        Create assessment
      <% end %>
    </div>

    <div class="mt-8">
      <%= render TestLibraryComponent.new(tests: @tests, clear_path: test_library_index_path, business: current_business) %>
    </div>
  </div>
</main>
