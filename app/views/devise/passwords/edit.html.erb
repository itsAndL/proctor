<div class="relative flex min-h-full shrink-0 justify-center md:px-12 lg:px-0">
  <div class="relative z-10 flex flex-1 flex-col bg-white px-4 py-10 shadow-2xl sm:justify-center md:flex-none md:px-28">
    <main class="mx-auto w-full max-w-md sm:px-4 md:w-96 md:max-w-sm md:px-0">
      <div><a aria-label="Home" href="/"><%= svg_tag "assesskit", class: "h-12 w-auto" %></a>
      <h2 class="mt-8 text-2xl font-bold leading-9 tracking-tight text-gray-900">Change your password</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.hidden_field :reset_password_token %>

        <div class="mt-10 grid grid-cols-1 gap-y-7">
          <div>
              <%= f.label :password, "New password", class: "required-label" %>
              <%= f.password_field :password, autocomplete: "new-password", required: true, class: "primary-field" %>
              <%= render FieldErrorComponent.new(:password, resource) %>
            </div>
            
            <div>
              <%= f.label :password_confirmation, "Confirm password", class: "required-label" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true, class: "primary-field" %>
              <%= render FieldErrorComponent.new(:password_confirmation, resource) %>
            </div>

          <div>
            <%= f.submit "Change my password", class: "mt-1 group inline-flex items-center justify-center rounded-full py-2 px-4 text-sm font-semibold focus:outline-none focus-visible:outline-2 focus-visible:outline-offset-2 bg-blue-600 text-white hover:text-slate-100 hover:bg-blue-500 active:bg-blue-800 active:text-blue-100 focus-visible:outline-blue-600 w-full" %>
          </div>
        </div>
      <% end %>
      <div class="mt-8">
        <p class="text-xs text-gray-500 font-medium">
          Donâ€™t have an account?
          <%= link_to "Create one", new_business_registration_path, class: "font-medium text-blue-600 underline" %>
        </p>
        <p class="mt-2.5 text-xs text-gray-500 font-medium">
          Already have an account?
          <%= link_to "Log in", new_business_session_path, class: "font-medium text-blue-600 underline" %>
        </p>
      </div>
    </main>
  </div>
  <div class="hidden sm:contents lg:relative lg:block lg:flex-1">
    <%= image_tag "features-bg.jpg", width: "1664", height: "1866", loading: "lazy", decoding: "async", class: "absolute inset-0 h-full w-full object-cover", style: "color:transparent" %>
  </div>
</div>
